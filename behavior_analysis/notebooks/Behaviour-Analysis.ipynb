for p in font_paths:
    if os.path.exists(p):
        fm.fontManager.addfont(p)

set_dark_theme()

churned_id = subscriptions[subscriptions['churn_flag'] == True]

feature_churned = (
    pd.merge(churned_id, featureusage, on='subscription_id', how='inner')
    .drop_duplicates()
)

feature_churned['usage_duration_min'] = feature_churned['usage_duration_secs'] / 60

support_churned = pd.merge(
    feature_churned, supportdata, on='account_id', how='inner'
)

support_churned['usage_duration_min'] = support_churned['usage_duration_secs'] / 60
support_churned['satisfaction_score'] = support_churned['satisfaction_score'].fillna(0)

support_churned['submitted_at'] = pd.to_datetime(support_churned['submitted_at'])
support_churned['closed_at'] = pd.to_datetime(support_churned['closed_at'])
support_churned['ticket_month'] = support_churned['submitted_at'].dt.to_period("M").astype(str)

support_churned = support_churned.drop_duplicates(subset="ticket_id")


def bucket_ticket_count(x):
    if x <= 2:  return "Stable"
    elif x <= 4: return "Elevated"
    elif x <= 6: return "High Risk"
    elif x <= 8: return "Critical"
    else:        return "Severe Critical"

def usage_bucket(x):
    if x <= 25: return "disengaged"
    elif x <= 40: return "inconsistent"
    elif x <= 60: return "stable usage"
    elif x <= 80: return "engaged"
    else:         return "dependency stress"

def error_bucket(x):
    if x == 0: return "No Errors"
    elif x <= 5: return "Low Errors"
    elif x <= 10: return "Medium Errors"
    elif x <= 20: return "High Errors"
    else: return "Severe Errors"

def satisfaction_bucket(x):
    if x <= 1: return "Extremely Unhappy"
    elif x <= 2: return "Unhappy"
    elif x <= 3: return "Neutral"
    elif x <= 4: return "Satisfied"
    else: return "Very Satisfied"

ticket_df = (
    support_churned.groupby("account_id")["ticket_id"]
    .count()
    .reset_index()
    .rename(columns={"ticket_id": "ticket_count"})
)

ticket_df["ticket_bucket"] = ticket_df["ticket_count"].apply(bucket_ticket_count)

usage_df = support_churned.groupby("account_id")["usage_duration_min"].mean().reset_index()
usage_df["usage_bucket"] = usage_df["usage_duration_min"].apply(usage_bucket)

error_df = support_churned.groupby("account_id")["error_count"].sum().reset_index()
error_df["error_bucket"] = error_df["error_count"].apply(error_bucket)

satisfaction_df = support_churned.groupby("account_id")["satisfaction_score"].mean().reset_index()
satisfaction_df["satisfaction_bucket"] = satisfaction_df["satisfaction_score"].apply(satisfaction_bucket)

support_analysis = (
    ticket_df
    .merge(satisfaction_df, on="account_id")
    .merge(usage_df,        on="account_id")
    .merge(error_df,        on="account_id")
)

support_analysis.to_csv("support_analysis.csv", index=False)
support_analysis

ticket_churn = pd.merge(churnevents, support_churned, on="account_id")
ticket_plot  = pd.merge(ticket_churn, support_analysis, on="account_id").drop_duplicates( subset ="ticket_id")
ticket_plot

ticket_plot["submitted_at"] = pd.to_datetime(ticket_plot["submitted_at"])
ticket_plot["churn_date"]   = pd.to_datetime(ticket_plot["churn_date"])

ticket_plot["ticket_month_int"] = ticket_plot["submitted_at"].dt.to_period("M").astype(int)
ticket_plot["churn_month_int"]  = ticket_plot["churn_date"].dt.to_period("M").astype(int)

ticket_plot["months_before_churn"] = (
    ticket_plot["ticket_month_int"] - ticket_plot["churn_month_int"]
)

df_pre = ticket_plot[(ticket_plot["months_before_churn"] < 0) &
             (ticket_plot["months_before_churn"] >= -12)]

df_pre.columns


ticket_counts = df_pre.groupby("months_before_churn")["ticket_id"].count()
user_counts   = df_pre.groupby("months_before_churn")["account_id"].nunique()

avg_tickets = (ticket_counts / user_counts).reset_index()
avg_tickets.columns = ["months_before_churn", "avg_tickets"]

plt.figure(figsize=(15,6))
plt.plot(avg_tickets["months_before_churn"], avg_tickets["avg_tickets"],
         marker="o", linewidth=3, color="#E88BFD")

plt.gca().invert_xaxis()
