def get_reason_breakdown(reason):
    temp = churn_df[churn_df["reason_code"] == reason]
    return (
        temp.groupby("industry")["account_id"]
        .count()
        .sort_values(ascending=False)
        .reset_index()
    )

reason_features = get_reason_breakdown("features")
reason_budget = get_reason_breakdown("budget")
reason_support = get_reason_breakdown("support")
reason_competitor = get_reason_breakdown("competitor")
reason_pricing = get_reason_breakdown("pricing")
reason_unknown = get_reason_breakdown("unknown")

def get_feedback_rank(reason, industry):
    temp = churn_df[
        (churn_df["reason_code"] == reason) &
        (churn_df["industry"] == industry)
    ]
    return (
        temp.groupby("feedback_text")["account_id"]
        .count()
        .sort_values(ascending=False)
        .reset_index()
    )

#get_feedback_rank("features", "DevTools")

churn = pd.merge(churnevents, accountinfo, on="account_id", how="inner")
churn = churn[['account_id', 'industry', 'reason_code', 'feedback_text']].copy()
churn['feedback_text'] = churn['feedback_text'].fillna("none")

valid_feedback = ["missing features", "too expensive", "unknown", "switched to competitor"]
churn = churn[churn['feedback_text'].isin(valid_feedback)]

def plot_feedback_text(feedback_value, title, save_name):
    df = churn[churn['feedback_text'] == feedback_value]

    summary = (
        df.groupby("industry")["account_id"]
          .count()
          .sort_values(ascending=False)
          .reset_index()
    )

    plt.figure(figsize=(10,6))
    sns.barplot(
        data=summary,
        y="industry",
        x="account_id",
        hue="industry",
        palette="magma"
    )

    plt.title(title, fontsize=18, fontweight="bold")
    plt.xlabel("Number of Users Giving This Feedback")
    plt.ylabel("Industry")
    plt.grid(axis="x", linestyle="--", alpha=0.4)
    
    # label values
    for index, row in summary.iterrows():
        plt.text(row["account_id"] + 0.5, index, str(row["account_id"]), va='center')

    plt.tight_layout()
    plt.savefig(save_name, dpi=300, bbox_inches="tight")
    plt.show()



plot_feedback_text(
    "missing features",
    "Industries Giving 'Missing Features' Feedback the Most",
    "feedback_missing_features_by_industry.png",
)

plot_feedback_text(
    "too expensive",
    "Industries Reporting 'Too Expensive' the Most",
    "feedback_too_expensive_by_industry.png"
)

